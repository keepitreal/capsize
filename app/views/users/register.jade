extends auth

block auth
    div.auth
        h2 Register
        include ../includes/social
        div.row.auth-separator or
        div.row.auth-local
            form.register(action="/users", method="post")
                .form-group
                    input#name(type="text", class="form-control", name="name", placeholder="Full Name", value=user.name)

                .form-group
                    input#email(type="text", class="form-control", name="email", placeholder="Email", value=user.email)

                .form-group
                    input#password(type="password", class="form-control", name="password", placeholder="Password")
                .row
                    .col-md-6
                        a.btn.btn-default.btn-block(href="/login") Login
                    .col-md-6
                        button.btn.btn-primary.btn-block(type="submit") Register